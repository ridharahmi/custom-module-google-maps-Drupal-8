function maps_preprocess_html(&$variables) {
    $config = \Drupal::config('maps.settings');
    //Add a JS library
    $variables['#attached']['library'][] = 'maps/maps_style';
    $variables['#attached']['drupalSettings']['animate_position'] = $config->get('animate_marker_position');
}

