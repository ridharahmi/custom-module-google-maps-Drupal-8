/**
 * Implements hook_theme().
 */
function maps_theme($existing, $type, $theme, $path)
{
    return array(
        'maps' => array(
            'variables' => array(
                'width' => NULL,
                'height' => NULL,
                'border' => NULL,
                'border_radius' => NULL,
                'color_border' => NULL,
                'padding_maps' => NULL,
            )
        )
    );
}


